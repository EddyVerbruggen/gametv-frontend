<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="nl.x-services.gametv"
        version="1.4-SNAPSHOT">

  <name>Game TV</name><!-- is also the name of the icon on the device -->

  <description>De nieuwste video's van de interessantste gamingsites uit binnen- en buitenland</description>

  <author href="http://www.x-services.nl"
          email="eddyverbruggen@gmail.com">
    X-Services VOF
  </author>

  <icon src="icon.png" gap:role="default"/><!-- gap:role=default is required for ios build -->

  <icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
  <icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
  <icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
  <icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

  <gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi"/>
  <gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi"/>
  <gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
  <gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

  <feature name="http://api.phonegap.com/1.0/network"/>

  <preference name="phonegap-version" value="2.9.0"/>
  <preference name="orientation" value="default"/><!-- both landscape and portrait = "default" -->
  <preference name="target-device" value="universal"/>
  <preference name="webviewbounce" value="false"/><!-- ios rubber banding -->

  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="show-splash-screen-spinner" value="false" />
  <preference name="prerendered-icon" value="true" /> <!-- no ios gloss effect plz -->

  <preference name="android-minSdkVersion" value="7" /><!-- 8=2.2, 9=2.3, 10=2.3.3, 14=4.0(crash on rotate!), 16=4.1, 17=4.2 -->
  <preference name="android-installLocation" value="auto" /><!-- preferExternal; preferably install on SD-card -->

  <preference name="exit-on-suspend" value="true" /><!-- stay with us, or not? -->
  <preference name="auto-hide-splash-screen" value="false" /><!-- we're hiding it with js -->

  <preference name="splash-screen-duration" value="3200" /> <!-- default 5000 -->

  <gap:plugin name="com.adobe.plugins.gaplugin" />
  <gap:plugin name="com.adobe.plugins.pushplugin" />

  <!-- allow loading any url in the webview -->
  <access origin="*" />

</widget>
